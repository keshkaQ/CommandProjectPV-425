<Window
    x:Class="CommandProjectPV_425.Views.ChartWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CommandProjectPV_425.Views"
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Графики производительности"
    Width="1200"
    Height="700"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d">

    <Grid>
        <TabControl>
            <TabItem Header="⏱️ Время выполнения">
                <lvc:CartesianChart
                    x:Name="TimeChart"
                    Margin="20"
                    LegendPosition="Hidden"
                    Series="{Binding TimeSeries}"
                    XAxes="{Binding TimeXAxes}"
                    YAxes="{Binding TimeYAxes}" />
            </TabItem>

            <TabItem Header="⚡ Ускорение">
                <lvc:CartesianChart
                    x:Name="SpeedupChart"
                    Margin="20"
                    LegendPosition="Hidden"
                    Series="{Binding SpeedupSeries}"
                    XAxes="{Binding SpeedupXAxes}"
                    YAxes="{Binding SpeedupYAxes}" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>