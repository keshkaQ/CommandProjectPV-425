<Window
    x:Class="CommandProjectPV_425.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CommandProjectPV_425.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Измерение производительности численных задач с помощью BenchmarkDotNet"
    Width="1350"
    Height="735"
    Icon="/Images/Иконка.ico"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.Resources>
        <Style x:Key="HeaderTextBlockStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="#2C3E50" />
            <Setter Property="FontSize" Value="13" />
        </Style>

        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Padding" Value="8,6" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Height" Value="32" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="#BDC3C7" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Height" Value="35" />
            <Setter Property="Padding" Value="15,8" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="4">
                            <ContentPresenter
                                Margin="{TemplateBinding Padding}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#BDC3C7" />
                                <Setter Property="Foreground" Value="#7F8C8D" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernDataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#2C3E50" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
        </Style>

        <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="#BDC3C7" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="RowBackground" Value="White" />
            <Setter Property="AlternatingRowBackground" Value="#F8F9FA" />
            <Setter Property="HorizontalGridLinesBrush" Value="#E9ECEF" />
            <Setter Property="VerticalGridLinesBrush" Value="#E9ECEF" />
            <Setter Property="HeadersVisibility" Value="Column" />
            <Setter Property="CanUserResizeRows" Value="False" />
            <Setter Property="CanUserAddRows" Value="False" />
            <Setter Property="CanUserDeleteRows" Value="False" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="SelectionMode" Value="Single" />
            <Setter Property="SelectionUnit" Value="FullRow" />
            <Setter Property="AutoGenerateColumns" Value="False" />
            <Setter Property="GridLinesVisibility" Value="Horizontal" />
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto" />
            <Setter Property="FontSize" Value="12" />
        </Style>

        <Style x:Key="BorderStyle" TargetType="Border">
            <Setter Property="Padding" Value="20" />
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="#BDC3C7" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="6" />
        </Style>

        <Style x:Key="ErrorBorderStyle" TargetType="Border">
            <Setter Property="Padding" Value="15,12" />
            <Setter Property="Background" Value="#F8D7DA" />
            <Setter Property="BorderBrush" Value="#F5C6CB" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="6" />
        </Style>

        <Style x:Key="StatusBorderStyle" TargetType="Border">
            <Setter Property="Padding" Value="15,12" />
            <Setter Property="Background" Value="#D5EDDA" />
            <Setter Property="BorderBrush" Value="#C3E6CB" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="6" />
        </Style>

    </Window.Resources>

    <Grid Margin="15" Background="#F5F7F9">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />

        </Grid.RowDefinitions>

        <Border
            Grid.Row="0"
            Margin="0,0,0,15"
            Padding="15,10"
            Background="White"
            BorderBrush="#BDC3C7"
            BorderThickness="0,0,0,1"
            CornerRadius="0">
            <StackPanel Orientation="Horizontal">
                <Image
                    Width="150"
                    Height="60"
                    Source="/Images/result_logo_v2.png" />
                <TextBlock
                    Margin="30,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="#2C3E50"
                    Text="📊 Измерение производительности численных задач c помощью BenchmarkDotNet" />
                <Image
                    Width="150"
                    Height="50"
                    Margin="45,0,0,0"
                    VerticalAlignment="Center"
                    Source="/Images/result_logo_top_v2.jpeg" />
                <Border
                    Width="50"
                    Height="50"
                    Margin="15,0,0,0"
                    Background="Transparent"
                    BorderBrush="CornflowerBlue"
                    BorderThickness="2"
                    CornerRadius="25">

                    <Button
                        Padding="0"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Click="AboutBtn_Click"
                        Content="❗"
                        Cursor="Hand"
                        FontSize="24"
                        FontWeight="Bold"
                        Foreground="Blue"
                        ToolTip="О программе и команде разработчиков">

                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                            </ControlTemplate>
                        </Button.Template>

                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                            </Style>
                        </Button.Style>

                    </Button>
                </Border>
            </StackPanel>
        </Border>

        <Border
            Grid.Row="2"
            Margin="0,0,0,10"
            Style="{StaticResource BorderStyle}">
            <StackPanel>
                <TextBlock
                    Margin="0,0,0,12"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="#2C3E50"
                    Text="Параметры тестирования" />

                <StackPanel Orientation="Horizontal">
                    <TextBlock Style="{StaticResource HeaderTextBlockStyle}" Text="Тип задачи:" />
                    <ComboBox
                        x:Name="TaskTypeComboBox"
                        Width="250"
                        Margin="10,0,30,0"
                        Style="{StaticResource ComboBoxStyle}">
                        <ComboBoxItem Content="Count Numbers Above Average">
                            <ComboBoxItem.ToolTip>
                                <ToolTip Content="Подсчёт количества элементов, превышающих среднее значение массива" />
                            </ComboBoxItem.ToolTip>
                        </ComboBoxItem>

                        <ComboBoxItem Content="Divisible Three or Five">
                            <ComboBoxItem.ToolTip>
                                <ToolTip Content="Подсчёт чисел, делящихся одновременно на 3 и 5" />
                            </ComboBoxItem.ToolTip>
                        </ComboBoxItem>

                        <ComboBoxItem Content="Find Prime Numbers">
                            <ComboBoxItem.ToolTip>
                                <ToolTip Content="Подсчёт количества простых чисел в массиве" />
                            </ComboBoxItem.ToolTip>
                        </ComboBoxItem>

                        <ComboBoxItem Content="Maximum Of Non Extreme Elements">
                            <ComboBoxItem.ToolTip>
                                <ToolTip Content="Поиск максимального значения среди элементов, не являющихся локальными экстремумами" />
                            </ComboBoxItem.ToolTip>
                        </ComboBoxItem>

                        <ComboBoxItem Content="Max Frequency Of Elements">
                            <ComboBoxItem.ToolTip>
                                <ToolTip Content="Поиск максимальной частоты повторения любого элемента" />
                            </ComboBoxItem.ToolTip>
                        </ComboBoxItem>

                        <ComboBoxItem Content="All Tasks">
                            <ComboBoxItem.ToolTip>
                                <ToolTip Content="Запускает тестирование всех задач последовательно." />
                            </ComboBoxItem.ToolTip>
                        </ComboBoxItem>
                    </ComboBox>

                    <TextBlock Style="{StaticResource HeaderTextBlockStyle}" Text="Размер входных данных:" />
                    <ComboBox
                        x:Name="SizeComboBox"
                        Width="130"
                        Margin="10,0,30,0"
                        Style="{StaticResource ComboBoxStyle}">
                        <ComboBoxItem Content="1,000,000" />
                        <ComboBoxItem Content="5,000,000" />
                    </ComboBox>
                </StackPanel>
            </StackPanel>
        </Border>

        <Border
            Grid.Row="3"
            Margin="0,0,0,10"
            Style="{StaticResource BorderStyle}">
            <StackPanel Orientation="Horizontal">
                <StackPanel Margin="0,0,15,0" Orientation="Horizontal">
                    <Button
                        x:Name="RunBenchmarkBtn"
                        Padding="10,5"
                        Background="#27AE60"
                        Click="RunBenchmarkBtn_Click"
                        Content="🚀 Тесты"
                        IsEnabled="{Binding IsNotBusy}"
                        Style="{StaticResource ActionButtonStyle}" />
                    <Button
                        x:Name="ShowChartsBtn"
                        Padding="10,5"
                        Background="#8E44AD"
                        Click="ShowChartsBtn_Click"
                        Content="📈 Графики"
                        IsEnabled="{Binding IsNotBusy}"
                        Style="{StaticResource ActionButtonStyle}" />
                </StackPanel>

                <StackPanel Margin="0,0,15,0" Orientation="Horizontal">
                    <Button
                        x:Name="ShowAnalyticsBtn"
                        Padding="10,5"
                        Background="DarkSlateGray"
                        Click="ShowAnalyticsBtn_Click"
                        Content="📊 Анализ данных"
                        IsEnabled="{Binding IsNotBusy}"
                        Style="{StaticResource ActionButtonStyle}" />
                    <Button
                        x:Name="SaveToDbBtn"
                        Padding="10,5"
                        Background="#2980B9"
                        Click="SaveToDbBtn_Click"
                        Content="💾 Сохранить в БД"
                        IsEnabled="{Binding IsNotBusy}"
                        Style="{StaticResource ActionButtonStyle}" />
                    <Button
                        x:Name="ExportBtn"
                        Padding="10,5"
                        Background="#F39C12"
                        Click="ExportBtn_Click"
                        Content="📥 Загрузить из БД"
                        IsEnabled="{Binding IsNotBusy}"
                        Style="{StaticResource ActionButtonStyle}" />
                </StackPanel>

                <StackPanel Margin="0,0,15,0" Orientation="Horizontal">
                    <Button
                        x:Name="ToJsonBtn"
                        Padding="10,5"
                        Background="Chocolate"
                        Click="ToJsonBtn_Click"
                        Content="📄 Экспорт в JSON"
                        IsEnabled="{Binding IsNotBusy}"
                        Style="{StaticResource ActionButtonStyle}" />
                    <Button
                        x:Name="ExportJsonBtn"
                        Padding="10,5"
                        Background="IndianRed"
                        Click="ExportJsonBtn_Click"
                        Content="📥 Импорт из JSON "
                        IsEnabled="{Binding IsNotBusy}"
                        Style="{StaticResource ActionButtonStyle}" />
                </StackPanel>

                <Button
                    x:Name="ClearResultsBtn"
                    Padding="10,5"
                    Background="#E74C3C"
                    Click="ClearResultsBtn_Click"
                    Content="🗑️ Очистить"
                    IsEnabled="{Binding IsNotBusy}"
                    Style="{StaticResource ActionButtonStyle}" />
            </StackPanel>
        </Border>


        <Border
            Grid.Row="4"
            Margin="0,0,0,10"
            Style="{StaticResource ErrorBorderStyle}"
            Visibility="{Binding ErrorVisibility}">
            <StackPanel Orientation="Horizontal">
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="#721C24"
                    Text="❌ Ошибка:" />
                <TextBlock
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    FontSize="13"
                    FontWeight="SemiBold"
                    Foreground="#721C24"
                    Text="{Binding ErrorText}" />
            </StackPanel>
        </Border>

        <Border Grid.Row="5" Style="{StaticResource BorderStyle}">
            <DataGrid
                x:Name="ResultsDataGrid"
                ItemsSource="{Binding Results}"
                Style="{StaticResource ModernDataGridStyle}">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="1.2*"
                        Binding="{Binding Processor}"
                        Header="Процессор"
                        HeaderStyle="{StaticResource ModernDataGridHeaderStyle}" />
                    <DataGridTextColumn
                        Width="0.5*"
                        Binding="{Binding CoreCount}"
                        Header="Ядер"
                        HeaderStyle="{StaticResource ModernDataGridHeaderStyle}" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding TaskType}"
                        Header="Тип задачи"
                        HeaderStyle="{StaticResource ModernDataGridHeaderStyle}" />
                    <DataGridTextColumn
                        Width="0.8*"
                        Binding="{Binding DataSize, StringFormat='N0'}"
                        Header="Размер"
                        HeaderStyle="{StaticResource ModernDataGridHeaderStyle}" />
                    <DataGridTextColumn
                        Width="1.1*"
                        Binding="{Binding MethodName}"
                        Header="Метод"
                        HeaderStyle="{StaticResource ModernDataGridHeaderStyle}" />
                    <DataGridTextColumn
                        Width="0.9*"
                        Binding="{Binding ExecutionTime}"
                        Header="⏱️ Время"
                        HeaderStyle="{StaticResource ModernDataGridHeaderStyle}" />
                    <DataGridTextColumn
                        Width="0.8*"
                        Binding="{Binding Speedup}"
                        Header="⚡ Ускорение"
                        HeaderStyle="{StaticResource ModernDataGridHeaderStyle}" />
                    <DataGridTextColumn
                        Width="1.2*"
                        Binding="{Binding Timestamp, StringFormat='dd.MM.yy HH:mm'}"
                        Header="🕒 Время теста"
                        HeaderStyle="{StaticResource ModernDataGridHeaderStyle}" />
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <Border
            Grid.Row="6"
            Margin="0,10,0,0"
            Style="{StaticResource StatusBorderStyle}">
            <StackPanel Orientation="Horizontal">
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="#155724"
                    Text="📊 Статус:" />
                <TextBlock
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    FontSize="13"
                    FontWeight="SemiBold"
                    Foreground="#155724"
                    Text="{Binding StatusText}" />
            </StackPanel>
        </Border>
    </Grid>
</Window>