<Window
    x:Class="CommandProjectPV_425.Views.ChartWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CommandProjectPV_425.Views"
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Графики производительности"
    Width="1200"
    Height="800"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="ChartStyle" TargetType="lvc:CartesianChart">
            <Setter Property="Margin" Value="10" />
            <Setter Property="LegendPosition" Value="Top" />
            <Setter Property="LegendFontSize" Value="12" />
            <Setter Property="LegendBackground" Value="#F0F0F0" />
        </Style>
    </Window.Resources>

    <Grid>
        <TabControl>
            <TabItem Header="Основные метрики">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <lvc:CartesianChart
                        x:Name="TimeChart"
                        Grid.Row="0"
                        Grid.Column="0"
                        Style="{StaticResource ChartStyle}" />
                    <lvc:CartesianChart
                        x:Name="MemoryChart"
                        Grid.Row="0"
                        Grid.Column="1"
                        Style="{StaticResource ChartStyle}" />
                    <lvc:CartesianChart
                        x:Name="SpeedupChart"
                        Grid.Row="1"
                        Grid.Column="0"
                        Style="{StaticResource ChartStyle}" />
                    <lvc:CartesianChart
                        x:Name="EfficiencyChart"
                        Grid.Row="1"
                        Grid.Column="1"
                        Style="{StaticResource ChartStyle}" />
                </Grid>
            </TabItem>

            <TabItem Header="Статистика">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <lvc:CartesianChart
                        x:Name="ErrorChart"
                        Grid.Row="0"
                        Grid.Column="0"
                        Style="{StaticResource ChartStyle}" />
                    <lvc:CartesianChart
                        x:Name="StdDevChart"
                        Grid.Row="0"
                        Grid.Column="1"
                        Style="{StaticResource ChartStyle}" />
                    <lvc:CartesianChart
                        x:Name="TimeWithErrorChart"
                        Grid.Row="1"
                        Grid.Column="0"
                        Style="{StaticResource ChartStyle}" />
                    <lvc:CartesianChart
                        x:Name="PerformanceProfileChart"
                        Grid.Row="1"
                        Grid.Column="1"
                        Style="{StaticResource ChartStyle}" />
                </Grid>
            </TabItem>

            <TabItem Header="Сравнение">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <lvc:CartesianChart
                        x:Name="MemoryTimeComparisonChart"
                        Grid.Row="0"
                        Style="{StaticResource ChartStyle}" />
                    <lvc:CartesianChart
                        x:Name="SpeedupMemoryChart"
                        Grid.Row="1"
                        Style="{StaticResource ChartStyle}" />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>