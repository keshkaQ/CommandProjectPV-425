<Window x:Class="CommandProjectPV_425.Views.AnalyticsChartWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CommandProjectPV_425.Views"
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Графики производительности"
    Width="1200"
    Height="700"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" HorizontalAlignment="Left" Margin="10 5 0 0" Orientation="Horizontal">
            <TextBlock Text="Количество ядер: "/>
            <ComboBox Width="200" Name="CoreCountComboBox"/>
        </StackPanel>


        <lvc:CartesianChart
            Grid.Row="1"
                    x:Name="TimeChart"
                    Margin="20"
                    LegendOrientation="Horizontal"
                    LegendPosition="Bottom"
                    Series="{Binding MethodStatsSeries}"
                    XAxes="{Binding MethodStatsXAxes}"
                    YAxes="{Binding MethodStatsYAxes}" />
    </Grid>
</Window>
