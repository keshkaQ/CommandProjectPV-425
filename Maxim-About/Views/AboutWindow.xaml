<Window
   x:Class="CommandProjectPV_425.Views.AboutWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{Binding Title}"
    Width="650"
    Height="650"
    WindowStartupLocation="CenterOwner"
    ResizeMode="NoResize"
    Background="#F7F9FB"
    mc:Ignorable="d">

    <Border Margin="15" Padding="20" Background="White" CornerRadius="10" BorderBrush="#BDC3C7" BorderThickness="1">
        <StackPanel>
            <!-- Заголовок -->
            <TextBlock
                Text="О программе"
                FontSize="20"
                FontWeight="Bold"
                Foreground="#2C3E50"
                HorizontalAlignment="Center"
                Margin="0,0,0,15" />

            <!-- Описание -->
            <TextBlock
                Text="Приложение предназначено для измерения производительности численных задач с использованием BenchmarkDotNet. 
Позволяет проводить тестирование различных алгоритмов, сохранять результаты и анализировать их эффективность."
                TextWrapping="Wrap"
                Foreground="#2C3E50"
                FontSize="14"
                Margin="0,0,0,20" />

            <Separator Margin="0,0,0,15" />

            <!-- Таблица с командой -->
            <TextBlock
                Text="Команда разработчиков"
                FontSize="16"
                FontWeight="SemiBold"
                Foreground="#2C3E50"
                Margin="0,0,0,10" />

            <Grid Margin="0,5,0,15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Заголовок -->
                    <RowDefinition Height="Auto"/>
                    <!-- Project Lead -->
                    <RowDefinition Height="Auto"/>
                    <!-- Backend Developer -->
                    <RowDefinition Height="Auto"/>
                    <!-- Development Team -->
                    <RowDefinition Height="Auto"/>
                    <!-- QA Engineer -->
                    <RowDefinition Height="Auto"/>
                    <!-- Technical Writers -->
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="4*"/>
                </Grid.ColumnDefinitions>

                <!-- Заголовки -->
                <Border Grid.Row="0" Grid.Column="0" Background="#2C3E50" BorderBrush="White" BorderThickness="0.5">
                    <TextBlock Text="Роль" Foreground="White" FontWeight="Bold" Padding="8" TextWrapping="Wrap"/>
                </Border>
                <Border Grid.Row="0" Grid.Column="1" Background="#2C3E50" BorderBrush="White" BorderThickness="0.5">
                    <TextBlock Text="Участник" Foreground="White" FontWeight="Bold" Padding="8" TextWrapping="Wrap"/>
                </Border>
                <Border Grid.Row="0" Grid.Column="2" Background="#2C3E50" BorderBrush="White" BorderThickness="0.5">
                    <TextBlock Text="Основные задачи" Foreground="White" FontWeight="Bold" Padding="8" TextWrapping="Wrap"/>
                </Border>

                <!-- Project Lead -->
                <Border Grid.Row="1" Grid.Column="0" BorderBrush="#BDC3C7" BorderThickness="0.5">
                    <TextBlock Text="Project Lead" Padding="8" TextWrapping="Wrap"/>
                </Border>
                <Border Grid.Row="1" Grid.Column="1" BorderBrush="#BDC3C7" BorderThickness="0.5">
                    <TextBlock Text="Банарь К.Ю." Padding="8" TextWrapping="Wrap"/>
                </Border>
                <Border Grid.Row="1" Grid.Column="2" BorderBrush="#BDC3C7" BorderThickness="0.5">
                    <TextBlock Text="Координация, управление проектом, UI-разработка" Padding="8" TextWrapping="Wrap"/>
                </Border>

                <!-- Backend Developer -->
                <Border Grid.Row="2" Grid.Column="0" BorderBrush="#BDC3C7" BorderThickness="0.5">
                    <TextBlock Text="Backend Developer" Padding="8" TextWrapping="Wrap"/>
                </Border>
                <Border Grid.Row="2" Grid.Column="1" BorderBrush="#BDC3C7" BorderThickness="0.5">
                    <TextBlock Text="Андреев М.С., Шигапов Ш.Р." Padding="8" TextWrapping="Wrap"/>
                </Border>
                <Border Grid.Row="2" Grid.Column="2" BorderBrush="#BDC3C7" BorderThickness="0.5">
                    <TextBlock Text="Архитектура БД, EF Core, UI-разработка" Padding="8" TextWrapping="Wrap"/>
                </Border>

                <!-- Development Team -->
                <Border Grid.Row="3" Grid.Column="0" BorderBrush="#BDC3C7" BorderThickness="0.5">
                    <TextBlock Text="Development Team" Padding="8" TextWrapping="Wrap"/>
                </Border>
                <Border Grid.Row="3" Grid.Column="1" BorderBrush="#BDC3C7" BorderThickness="0.5">
                    <TextBlock Text="Банарь К.Ю., Андреев М.С., Шигапов Ш.Р." Padding="8" TextWrapping="Wrap"/>
                </Border>
                <Border Grid.Row="3" Grid.Column="2" BorderBrush="#BDC3C7" BorderThickness="0.5">
                    <TextBlock Text="Реализация функциональности, кодирование, отладка" Padding="8" TextWrapping="Wrap"/>
                </Border>

                <!-- QA Engineer -->
                <Border Grid.Row="4" Grid.Column="0" BorderBrush="#BDC3C7" BorderThickness="0.5">
                    <TextBlock Text="QA Engineer" Padding="8" TextWrapping="Wrap"/>
                </Border>
                <Border Grid.Row="4" Grid.Column="1" BorderBrush="#BDC3C7" BorderThickness="0.5">
                    <TextBlock Text="Юзмухаметов А.Ш." Padding="8" TextWrapping="Wrap"/>
                </Border>
                <Border Grid.Row="4" Grid.Column="2" BorderBrush="#BDC3C7" BorderThickness="0.5">
                    <TextBlock Text="Тестирование, валидация, контроль качества" Padding="8" TextWrapping="Wrap"/>
                </Border>

                <!-- Technical Writers -->
                <Border Grid.Row="5" Grid.Column="0" BorderBrush="#BDC3C7" BorderThickness="0.5">
                    <TextBlock Text="Technical Writers" Padding="8" TextWrapping="Wrap"/>
                </Border>
                <Border Grid.Row="5" Grid.Column="1" BorderBrush="#BDC3C7" BorderThickness="0.5">
                    <TextBlock Text="Банарь К.Ю.,Шолохов В.Е., Юзмухаметов А.Ш." Padding="8" TextWrapping="Wrap"/>
                </Border>
                <Border Grid.Row="5" Grid.Column="2" BorderBrush="#BDC3C7" BorderThickness="0.5">
                    <TextBlock Text="Документация, README, технические описания" Padding="8" TextWrapping="Wrap"/>
                </Border>
            </Grid>

            <!-- Нижняя часть -->
            <Separator Margin="0,0,0,15" />
            <TextBlock
                Text="© 2025 Команда BV425, Академия TOP"
                FontSize="12"
                Foreground="#7F8C8D"
                HorizontalAlignment="Center"
                Margin="0,0,0,15" />
            <Button
                Content="Закрыть"
                Width="100"
                Height="35"
                Background="#2C3E50"
                Foreground="White"
                FontWeight="SemiBold"
                HorizontalAlignment="Center"
                Click="CloseButton_Click"
                Cursor="Hand"
                BorderThickness="0"
                />
        </StackPanel>
    </Border>
</Window>
