<Window
    x:Class="CommandProjectPV_425.Views.AboutWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{Binding Title}"
    Width="650"
    Height="650"
    Background="#F7F9FB"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <Border
        Margin="15"
        Padding="20"
        Background="White"
        BorderBrush="#BDC3C7"
        BorderThickness="1"
        CornerRadius="10">
        <StackPanel>
            <TextBlock
                Margin="0,0,0,15"
                HorizontalAlignment="Center"
                FontSize="20"
                FontWeight="Bold"
                Foreground="#2C3E50"
                Text="О программе" />

            <TextBlock
                Margin="0,0,0,20"
                FontSize="14"
                Foreground="#2C3E50"
                Text="Приложение предназначено для измерения производительности численных задач с использованием BenchmarkDotNet.  Позволяет проводить тестирование различных алгоритмов, сохранять результаты и анализировать их эффективность."
                TextWrapping="Wrap" />

            <Separator Margin="0,0,0,15" />

            <TextBlock
                Margin="0,0,0,10"
                FontSize="16"
                FontWeight="SemiBold"
                Foreground="#2C3E50"
                Text="Команда разработчиков" />

            <Grid Margin="0,5,0,15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="4*" />
                </Grid.ColumnDefinitions>

                <Border
                    Grid.Row="0"
                    Grid.Column="0"
                    Background="#2C3E50"
                    BorderBrush="White"
                    BorderThickness="0.5">
                    <TextBlock
                        Padding="8"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="Роль"
                        TextWrapping="Wrap" />
                </Border>
                <Border
                    Grid.Row="0"
                    Grid.Column="1"
                    Background="#2C3E50"
                    BorderBrush="White"
                    BorderThickness="0.5">
                    <TextBlock
                        Padding="8"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="Участник"
                        TextWrapping="Wrap" />
                </Border>
                <Border
                    Grid.Row="0"
                    Grid.Column="2"
                    Background="#2C3E50"
                    BorderBrush="White"
                    BorderThickness="0.5">
                    <TextBlock
                        Padding="8"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="Основные задачи"
                        TextWrapping="Wrap" />
                </Border>

                <Border
                    Grid.Row="1"
                    Grid.Column="0"
                    BorderBrush="#BDC3C7"
                    BorderThickness="0.5">
                    <TextBlock
                        Padding="8"
                        Text="Project Lead"
                        TextWrapping="Wrap" />
                </Border>
                <Border
                    Grid.Row="1"
                    Grid.Column="1"
                    BorderBrush="#BDC3C7"
                    BorderThickness="0.5">
                    <TextBlock
                        Padding="8"
                        Text="Банарь К.Ю."
                        TextWrapping="Wrap" />
                </Border>
                <Border
                    Grid.Row="1"
                    Grid.Column="2"
                    BorderBrush="#BDC3C7"
                    BorderThickness="0.5">
                    <TextBlock
                        Padding="8"
                        Text="Координация, управление проектом, UI-разработка"
                        TextWrapping="Wrap" />
                </Border>

                <Border
                    Grid.Row="2"
                    Grid.Column="0"
                    BorderBrush="#BDC3C7"
                    BorderThickness="0.5">
                    <TextBlock
                        Padding="8"
                        Text="Backend Developer"
                        TextWrapping="Wrap" />
                </Border>
                <Border
                    Grid.Row="2"
                    Grid.Column="1"
                    BorderBrush="#BDC3C7"
                    BorderThickness="0.5">
                    <TextBlock
                        Padding="8"
                        Text="Андреев М.С., Шигапов Ш.Р."
                        TextWrapping="Wrap" />
                </Border>
                <Border
                    Grid.Row="2"
                    Grid.Column="2"
                    BorderBrush="#BDC3C7"
                    BorderThickness="0.5">
                    <TextBlock
                        Padding="8"
                        Text="Архитектура БД, EF Core, UI-разработка"
                        TextWrapping="Wrap" />
                </Border>

                <Border
                    Grid.Row="3"
                    Grid.Column="0"
                    BorderBrush="#BDC3C7"
                    BorderThickness="0.5">
                    <TextBlock
                        Padding="8"
                        Text="Development Team"
                        TextWrapping="Wrap" />
                </Border>
                <Border
                    Grid.Row="3"
                    Grid.Column="1"
                    BorderBrush="#BDC3C7"
                    BorderThickness="0.5">
                    <TextBlock
                        Padding="8"
                        Text="Банарь К.Ю., Андреев М.С., Шигапов Ш.Р."
                        TextWrapping="Wrap" />
                </Border>
                <Border
                    Grid.Row="3"
                    Grid.Column="2"
                    BorderBrush="#BDC3C7"
                    BorderThickness="0.5">
                    <TextBlock
                        Padding="8"
                        Text="Реализация функциональности, кодирование, отладка"
                        TextWrapping="Wrap" />
                </Border>

                <Border
                    Grid.Row="4"
                    Grid.Column="0"
                    BorderBrush="#BDC3C7"
                    BorderThickness="0.5">
                    <TextBlock
                        Padding="8"
                        Text="QA Engineer"
                        TextWrapping="Wrap" />
                </Border>
                <Border
                    Grid.Row="4"
                    Grid.Column="1"
                    BorderBrush="#BDC3C7"
                    BorderThickness="0.5">
                    <TextBlock
                        Padding="8"
                        Text="Юзмухаметов А.Ш."
                        TextWrapping="Wrap" />
                </Border>
                <Border
                    Grid.Row="4"
                    Grid.Column="2"
                    BorderBrush="#BDC3C7"
                    BorderThickness="0.5">
                    <TextBlock
                        Padding="8"
                        Text="Тестирование, валидация, контроль качества"
                        TextWrapping="Wrap" />
                </Border>

                <Border
                    Grid.Row="5"
                    Grid.Column="0"
                    BorderBrush="#BDC3C7"
                    BorderThickness="0.5">
                    <TextBlock
                        Padding="8"
                        Text="Technical Writers"
                        TextWrapping="Wrap" />
                </Border>
                <Border
                    Grid.Row="5"
                    Grid.Column="1"
                    BorderBrush="#BDC3C7"
                    BorderThickness="0.5">
                    <TextBlock
                        Padding="8"
                        Text="Банарь К.Ю., Юзмухаметов А.Ш."
                        TextWrapping="Wrap" />
                </Border>
                <Border
                    Grid.Row="5"
                    Grid.Column="2"
                    BorderBrush="#BDC3C7"
                    BorderThickness="0.5">
                    <TextBlock
                        Padding="8"
                        Text="Документация, README, технические описания"
                        TextWrapping="Wrap" />
                </Border>
            </Grid>

            <!--  Нижняя часть  -->
            <Separator Margin="0,0,0,15" />
            <TextBlock
                Margin="0,0,0,15"
                HorizontalAlignment="Center"
                FontSize="12"
                Foreground="#7F8C8D"
                Text="© 2025 Команда BV425, Академия TOP" />
            <Button
                Width="100"
                Height="35"
                HorizontalAlignment="Center"
                Background="#2C3E50"
                BorderThickness="0"
                Click="CloseButton_Click"
                Content="Закрыть"
                Cursor="Hand"
                FontWeight="SemiBold"
                Foreground="White" />
        </StackPanel>
    </Border>
</Window>